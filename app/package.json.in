{
  "name": "HyperReader",
  "version": "${version}",
  "author": "Benjamin Forster",
  "description": "A peer to peer word processor.",
  "main": "main.js",
  "dependencies": {
    "hyper-readings-manager": "0.0.7"
  },
  "build": {
    "appId": "com.hyper-readings.hyper-reader-desktop",
    "files": [
      "data",
      "lib",
      "node_modules",
      "*.html",
      "*.js",
      "package.json"
    ],
    "asar": "false",
    "directories": {
      "output": "build",
      "buildResources": "build-resources"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/e-e-e/hyper-reader.git"
  },
  "target": {
    "mac": {
      "icon": "build-resources/icon.png"
    },
    "win": {
      "icon": "build-resources/icon.png"
    },
    "linux": {
      "icon": "build-resources/icon.png"
    }
  },
  "license": "MIT"
}
